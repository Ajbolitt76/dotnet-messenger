.profile-section{
    display: flex;
    flex-direction: column;
    gap: 10px;

    &__header{
        font-weight: 500;
        font-size: 24px;
        color: var(--gray-800);
    }

    &__splitter{
        box-sizing: content-box;
        width: 100%;
        height: 1px;
        border-bottom: 2px solid var(--light-blue-500);
    }

    &__skills{
        display: flex;
        gap: 30px;
        flex-wrap: wrap;
    }
}
